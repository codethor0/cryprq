<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
 <dict>
  <key>Label</key><string>com.cryrpq.devwatch</string>
  <key>WorkingDirectory</key><string>/Users/YOU/path/to/repo</string>
  <key>ProgramArguments</key>
  <array>
    <string>/bin/bash</string>
    <string>-lc</string>
    <string>set -a; source ./.env.devwatch 2>/dev/null || true; set +a; bash scripts/dev-watch.sh</string>
  </array>
  <key>RunAtLoad</key><true/>
  <key>StandardOutPath</key><string>/Users/YOU/path/to/repo/artifacts/dev-watch/launchd.out</string>
  <key>StandardErrorPath</key><string>/Users/YOU/path/to/repo/artifacts/dev-watch/launchd.err</string>
  <key>KeepAlive</key><true/>
 </dict>
</plist>

