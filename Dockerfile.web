# Multi-stage Dockerfile for CrypRQ Web Stack
# Stage 1: Build Rust backend
# Stage 2: Build web frontend
# Stage 3: Runtime with backend + frontend

# ---- Stage 1: Build Rust Backend ----
FROM rust:1.83 AS rust-builder
WORKDIR /build

# Copy workspace files
COPY Cargo.toml Cargo.lock rust-toolchain.toml ./
COPY cli/Cargo.toml ./cli/
COPY crypto/Cargo.toml ./crypto/
COPY node/Cargo.toml ./node/
COPY p2p/Cargo.toml ./p2p/
COPY core/Cargo.toml ./core/
COPY fuzz/Cargo.toml ./fuzz/
COPY benches/Cargo.toml ./benches/

# Copy source
COPY cli/src ./cli/src
COPY crypto/src ./crypto/src
COPY node/src ./node/src
COPY p2p/src ./p2p/src
COPY core/src ./core/src
COPY third_party/if-watch ./third_party/if-watch
# Copy fuzz and benches (workspace members need their source)
COPY fuzz/ ./fuzz/
COPY benches/ ./benches/

# Build optimized binary
RUN cargo build --release -p cryprq

# ---- Stage 2: Build Web Frontend ----
FROM node:20-slim AS web-builder
WORKDIR /build

# Copy web files
COPY web/package*.json ./web/
COPY web/vite.config.ts ./web/
COPY web/tsconfig.json ./web/
COPY web/index.html ./web/
COPY web/src ./web/src
COPY web/public ./web/public

# Install dependencies and build
WORKDIR /build/web
RUN npm ci && npm run build

# ---- Stage 3: Runtime ----
FROM node:20-slim
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy Rust binary from builder
COPY --from=rust-builder /build/target/release/cryprq /usr/local/bin/cryprq

# Copy web server code
COPY web/server ./web/server
COPY web/package*.json ./web/

# Copy built frontend assets
COPY --from=web-builder /build/web/dist ./web/dist
COPY --from=web-builder /build/web/index.html ./web/

# Install web server dependencies
WORKDIR /app/web
RUN npm ci --production

# Expose ports
EXPOSE 8787 5173

# Start web server
WORKDIR /app
CMD ["node", "web/server/server.mjs"]

