{
  "name": "cryprq-gui",
  "version": "1.0.1",
  "description": "CrypRQ Desktop GUI - Post-quantum VPN client",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev:xvfb": "xvfb-run -a npm run dev",
    "build": "npm run build:electron && npm run build:vite && electron-builder",
    "build:electron": "tsc -p tsconfig.node.json",
    "build:vite": "vite build",
    "build:mac": "npm run build -- --mac",
    "build:win": "npm run build -- --win",
    "build:linux": "electron-builder --linux AppImage deb",
    "build:win-unsigned": "electron-builder --win nsis",
    "postinstall": "electron-builder install-app-deps",
    "preview": "vite preview",
    "lint": "eslint --max-warnings=0 .",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:playwright": "playwright test --reporter=list",
    "test:ci": "npm run lint && npm run typecheck && npm run test:unit && npm run test:playwright",
    "e2e:serve-fake": "node .docker/fake-cryprq/server.js",
    "e2e:headless": "xvfb-run -a playwright test"
  },
  "keywords": [
    "vpn",
    "post-quantum",
    "security"
  ],
  "author": "Thor Thor",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.2.1",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "react-window": "^1.8.10",
    "recharts": "^3.4.1",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.cryprq.gui",
    "productName": "CrypRQ",
    "directories": {
      "output": "dist-package"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.networking",
      "icon": "assets/icons/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network"
    }
  }
}
